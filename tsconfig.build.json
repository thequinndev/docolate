{
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "Node16",
      "target": "ES2020",
      "strict": true,
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "allowJs": true,
      "skipDefaultLibCheck": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["vitest/globals", "node"]
    },
    "include": [
      "src/**/*.ts",
      "route-manager.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "examples",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.test.js",
      "**/*.spec.js"
    ]
  }
  