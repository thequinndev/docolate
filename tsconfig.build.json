{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "lib": ["es6", "dom"],
      "allowJs": true,
      "skipDefaultLibCheck": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "dist",
      "examples",
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.test.js",
      "**/*.spec.js"
    ]
  }
  